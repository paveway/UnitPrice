<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <layer-list>
            <item>
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:startColor="#FFFFFF"
                        android:endColor="#C0C0C0"
                        android:type="linear" />
                    <corners
                        android:radius="5dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#C0C0C0"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item
        android:state_checked="false"
        android:state_pressed="false">
        <layer-list>
            <item>
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:startColor="#FFFFFF"
                        android:endColor="#C0C0C0"
                        android:type="linear" />
                    <corners
                        android:radius="5dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#C0C0C0"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
